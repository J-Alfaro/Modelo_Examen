@model Examen_UII_Web2.Models.Modelo
@{
    ViewBag.Title = "AgregarEditar";
}

<h2>Agregar / Editar</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Modelo/Index">Modelo</a>
        </li>
        <li class="breadcrumb-item" active>

            @(Model.modelo_id > 0 ? Model.nombre_modelo : "Nuevo Registro")
        </li>

    </ol>

</nav>

@using (Html.BeginForm("Guardar", "Modelo", FormMethod.Post, new { id = "frm-modelo" }))
{
    @Html.HiddenFor(x => x.modelo_id)
    <div class="card">
        <div class="card-header">
            Informacion de Modelo
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.Label("Id")
                @Html.TextBoxFor(x => x.modelo_id, new { @class = "form-control", disabled = true })

            </div>
            <div class="form-group">
                @Html.Label("Nombre")
                @Html.TextBoxFor(x => x.nombre_modelo, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.nombre_modelo, null, new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.Label("Descripcion")
                @Html.TextBoxFor(x => x.descripcion, new { @class = "form-control" })
                

            </div>

        </div>

    </div>
    <br />
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/Modelo" class="btn btn-danger">Cancelar</a>

    </div>

}