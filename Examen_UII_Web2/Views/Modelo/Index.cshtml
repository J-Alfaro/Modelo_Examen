@model List<Examen_UII_Web2.Models.Modelo>


@{
    ViewBag.Title = "Index";
}

<div class="card">
    <h5 class="card-header">Lista de Modelo</h5>

    <div class="text-right">
        <a href="~/Modelo/AgregarEditar/" class="btn btn-primary text-right">Nuevo Registro</a>
    </div>
    <br />
    <table id="example" class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>

                <th style="width:250px">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
            <tr>
                <td>@(s.modelo_id)</td>
                <td>@(s.nombre_modelo)</td>
                <td>@(s.descripcion)</td>

                <td style="text-align:center;">
                    <a href="~/Modelo/Visualizar/@s.modelo_id" class="btn btn-xs btn-warning btn-sm">Visualizar</a>
                    <a href="~/Modelo/AgregarEditar/@s.modelo_id" class="btn btn-xs btn-primary btn-sm">Modificar</a>
                    <a href="~/Modelo/Eliminar/@s.modelo_id" class="btn btn-xs btn-danger btn-sm" onclick="return confirm('¿Estas seguro qu desea eliminar?');">Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
