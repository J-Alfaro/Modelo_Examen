@model Examen_UII_Web2.Models.Criterio
@{

    List<Examen_UII_Web2.Models.Modelo> modelo = ViewBag.Modelo;
}

<h2>Agregar / Editar</h2>

<ol class="breadcrumb">
    <li><a href="~/Criterio">Criterio</a></li>
    <li class="active">@(Model.criterio_id > 0 ? Model.nombre_criterio : "Nuevo Registro")</li>
</ol>
@using (Html.BeginForm("Guardar", "Usuario", FormMethod.Post, new { id = "frm-usuario" }))
{
    @Html.HiddenFor(x => x.criterio_id)
    <div class="panel panel-default">
        <div class="paneñ-heading">Informacion del Usuario</div>
        <div class="panel-body">

            <div class="form-group">
                @Html.Label("ID:")
                @Html.TextBoxFor(x => x.criterio_id, new { @class = "form-control", disabled = true })
            </div>
            <div class="form-group">
                @Html.Label("Modelo:")
                <select name="modelo_id" class="form-control">
                    <option @(Model.modelo_id.Equals("") ? "selected" : "") value="">-Seleccione-</option>
                    @foreach (var p in modelo)
                    {
                        <option @(Model.modelo_id.Equals(p.modelo_id) ? "selected" : "") value="@p.modelo_id">---</option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.modelo_id, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Nombre:")
                @Html.TextBoxFor(x => x.nombre_criterio, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.nombre_criterio, null, new { @class = "label label-danger" })
            </div>
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/Usuario" class="btn btn-danger">Cancelar</a>
    </div>
}
