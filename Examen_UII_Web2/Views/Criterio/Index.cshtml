@model List<Examen_UII_Web2.Models.Criterio>


@{
    ViewBag.Title = "Index";
}

<div class="card">
    <h5 class="card-header">Lista de Criterios</h5>
    <div class="card-body">
        <div class="text-right">
            <a href="~/Criterio/AgregarEditar/" class="btn btn-primary text-right">Nuevo Registro</a>
        </div>
        <br />
        <table id="example" class="table table-hover">
            <thead>
                <tr>
                    <th>ID </th>
                    <th>Modelo </th>
                    <th>Nombre Criterio </th>
                    <th>Acciones </th>

                    <th style="width:250px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@(s.criterio_id)</td>
                        <td>@(s.Modelo.nombre_modelo)</td>
                        <td>@(s.nombre_criterio)</td>
                        <td style="align-content:center">
                            <a href="~/Criterio/Visualizar/@s.criterio_id" class="btn btn-xs btn-warning">Visualizar</a>
                            <a href="~/Criterio/AgregarEditar/@s.criterio_id" class="btn btn-xs btn-primary">Modificar</a>
                            <a href="~/Criterio/Eliminar/@s.criterio_id" class="btn btn-xs btn-danger" onclick="return confirm('¿Esta Seguro de Eliminar.........?');">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





