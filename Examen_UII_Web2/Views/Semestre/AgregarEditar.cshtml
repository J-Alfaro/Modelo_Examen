@model Examen_UII_Web2.Models.Semestre

@{
    ViewBag.Title = "AgregarEditar";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Semestre/Index">Semestre</a>
        </li>
        <li class="breadcrumb-item active">@(Model.semestre_id > 0 ? Model.nombre_semestre : "Nuevo Registro")</li>

    </ol>
</nav>

@using (Html.BeginForm("Guardar", "Semestre", FormMethod.Post, new { id = "frm-semestre" }))
{
    @Html.HiddenFor(x => x.semestre_id)
    <div class="card">
        <h5 class="card-header">Agregar / Editar Semestre </h5>
        <div class="card-body">

            <div class="form-group">
                @Html.Label("Id")
                @Html.TextBoxFor(x => x.semestre_id, new { @class = "form-control", disabled = true })
            </div>

            <div class="form-group">
                @Html.Label("Semestre")
                @Html.TextBoxFor(x => x.nombre_semestre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.nombre_semestre, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Año")
                @Html.TextBoxFor(x => x.anio, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Estado")
                <br />
                @Html.RadioButtonFor(x => x.estado, true) Activo  <label>&nbsp &nbsp</label>
                @Html.RadioButtonFor(x => x.estado, false, new { @checked = true }) Inactivo
            </div>


            <div class="text-right">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="~/Semestre" class="btn btn-danger">Cancelar</a>
            </div>
        </div>
    </div>


}
