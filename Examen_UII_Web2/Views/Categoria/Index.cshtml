@model List<Examen_UII_Web2.Models.Categoria>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <h5 class="card-header">Lista de Categorias</h5>
    <div class="card-body">
        <div class="text-right">
            <a href="~/Categoria/AgregarEditar/" class="btn btn-primary text-right">Nuevo Registro</a>
        </div>
        <br />
        <table id="example" class="table table-hover">
            <thead>
                <tr>
                    <th style="width:50px">Id</th>
                    <th style="width:100px">Nombre</th>
                    <th style="width:200px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@(s.categoria_id)</td>
                        <td>@(s.nombre_categoria)</td>

                        <td style="text-align:center;">
                            <a href="~/Categoria/Visualizar/@s.categoria_id" class="btn btn-xs btn-warning btn-sm">Visualizar</a>
                            <a href="~/Categoria/AgregarEditar/@s.categoria_id" class="btn btn-xs btn-primary btn-sm">Modificar</a>
                            <a href="~/Categoria/Eliminar/@s.categoria_id" class="btn btn-xs btn-danger btn-sm" onclick="return confirm('¿Estas seguro qu desea eliminar?');">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>