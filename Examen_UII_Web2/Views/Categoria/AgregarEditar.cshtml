@model Examen_UII_Web2.Models.Categoria
@{
    ViewBag.Title = "AgregarEditar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Categoria/Index">Categoria</a>
        </li>
        <li class="breadcrumb-item active">@(Model.categoria_id > 0 ? Model.nombre_categoria : "Nuevo Registro")</li>
    </ol>
</nav>
@using (Html.BeginForm("Guardar", "Categoria", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.categoria_id)
    <div class="card">
        <h5 class="card-header">Agregar / Editar Categoria </h5>
        <div class="card-body">
            <div class="form-group">
                @Html.Label("Id")
                @Html.TextBoxFor(x => x.categoria_id, new { @class = "form-control", disabled = true })
            </div>
            <div class="form-group">
                @Html.Label("Nombre")
                @Html.TextBoxFor(x => x.nombre_categoria, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.nombre_categoria, null, new { @class = "text-danger" })
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-primary">Grabar</button>
                <a href="~/Categoria" class="btn btn-danger">Cancelar</a>
            </div>
        </div>
    </div>


}